dialog.modal#modal
  div.modal-form
    form#modalForm(action="/items/add" enctype="multipart/form-data" method="POST")
      div.modal-title
        h2 Add a product
      div.separator
      div.top
        div.hero
          label(for="add-file-input")
            img.placeholder#addImage(src='/images/placeholder.png' alt='Placeholder image' width="150" height="150")
          input.modalImage(type="file" name="image" id="add-file-input" required)
        div.column-right
          label SKU
          input#addSku(type="number" name="sku" placeholder="SKU" minLength="7" maxLength="7")
          label Price
          input#addPrice(type="number" step="0.01" name="sale_price" placeholder="Price")
      div.bottom
        label Brand
        input#addBrand(type="text" name="brand" placeholder="Brand")
        label Name
        input#addName(type="text" name="name" placeholder="Name")
        div.full
        label Description
        textarea#addDescription(name="description" cols="20" rows="10")
        p.errorMessage
        div.buttons
          input(type="submit" class="btn btn-primary confirm" value="Confirm")
          button#cancelBtn(type="button" class="btn btn-primary cancel") Cancel